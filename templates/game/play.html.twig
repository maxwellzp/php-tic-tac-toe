{% extends 'base.html.twig' %}

{% block title %}Game #{{ game.id }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Game #{{ game.id }}</h1>

            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="text-center">
                        {% if game.status == 'waiting' %}
                            Waiting for opponent...
                        {% elseif game.status == 'playing' %}
                            Player1 (X) vs Player2 (O)
                        {% else %}
                            Game Over
                        {% endif %}
                    </h2>
                </div>
                <div class="card-body">
                    <div>
                        <div class="game-board">
                            {{ include('game/_game_board.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <a href="{{ path('app_game_index') }}" class="btn btn-secondary">Back home</a>
            </div>
        </div>
    </div>
{% endblock %}